{
	"name": "curso-de-creacion-de-paginas-web-con-astro",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"lint": "eslint -c eslint.config.js . --max-warnings 0",
		"lint:fix": "eslint --fix ./**/*.{js,jsx,mjs,cjs,ts,tsx,mts,cts,json}",
		"prettier": "prettier . --check",
		"prettier:fix": "prettier . --write",
		"lint-md": "markdownlint-cli2 --config \".markdownlint-cli2.jsonc\" **/*.md \"#node_modules\"",
		"lint-md:fix": "markdownlint-cli2 --config \".markdownlint-cli2.jsonc\" --fix **/*.md \"#node_modules\"",
		"check-for-dupes": "jscpd ./",
		"test:performance": "lighthouse http://localhost:4173/ --view --output html --output-path ./lighthouse-report/lighthouse-report.html",
		"prepare": "husky"
	},
	"dependencies": {
		"astro": "^5.4.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@stylistic/eslint-plugin": "^4.2.0",
		"@typescript-eslint/eslint-plugin": "^8.26.0",
		"@typescript-eslint/parser": "^8.26.0",
		"@vitest/eslint-plugin": "^1.1.36",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^10.0.2",
		"eslint-import-resolver-typescript": "^3.8.3",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-check-file": "^3.1.0",
		"eslint-plugin-import-x": "^4.6.1",
		"eslint-plugin-jsdoc": "^50.6.3",
		"eslint-plugin-jsonc": "^2.19.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-playwright": "^2.2.0",
		"eslint-plugin-prettier": "^5.2.3",
		"eslint-plugin-react": "^7.37.4",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-sort-class-members": "^1.21.0",
		"eslint-plugin-tsdoc": "^0.4.0",
		"eslint-plugin-unicorn": "^57.0.0",
		"eslint-plugin-unused-imports": "^4.1.4",
		"husky": "^9.1.7",
		"jscpd": "^4.0.5",
		"markdownlint-cli2": "^0.17.2",
		"prettier": "^3.5.3",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"typescript-eslint": "^8.26.0"
	},
	"prettier": {
		"plugins": [
			"prettier-plugin-tailwindcss",
			"prettier-plugin-astro"
		],
		"overrides": [
			{
				"files": "*.jsonc",
				"options": {
					"trailingComma": "none"
				}
			},
			{
				"files": "*.astro",
				"options": {
					"parser": "astro"
				}
			}
		],
		"singleAttributePerLine": true
	},
	"lint-staged": {
		"*.(j|t)s": "npm run lint:fix",
		"*.md": "npm run lint-md:fix"
	},
	"jscpd": {
		"threshold": 3.5,
		"reporters": [
			"consoleFull"
		],
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/dist-dev/**",
			"**/build/**",
			"**/fonts/**",
			"**/coverage/**",
			"**/playwright-reports/**",
			"**/test-results/**",
			"**/lighthouse-report/**",
			"**/tsconfig.*.json"
		],
		"absolute": true
	}
}
